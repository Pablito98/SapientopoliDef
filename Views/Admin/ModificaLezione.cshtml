@model LessonViewModel
<section class="gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <div class="d-flex align-items-center mb-3 pb-1">
                            <img src="@(Url.Content("~/img/logo.jpg"))" class="nav-logo">
                        </div>
                        <form asp-controller="Admin" asp-action="ModificaLezione" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                            <div class="col-md-6 mb-4">
                                <div data-mdb-input-init class="form-outline">
                                    <input type="text" name="Titolo" id="firstName" class="form-control form-control-lg" value="@Model.Titolo" />
                                    <label class="form-label" for="firstName">Titolo</label>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div data-mdb-input-init class="form-outline w-100">
                                        <input type="text" class="form-control form-control-lg datepicker" name="Descrizione" value="@Model.Descrizione" />
                                        <label class="form-label">Descrizione</label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div data-mdb-input-init class="form-outline w-100">
                                        <input type="text" class="form-control form-control-lg datepicker" name="Teoria" value="@Model.Teoria" />
                                        <label class="form-label">Descrizione</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div data-mdb-input-init class="form-outline w-100">
                                        <input type="text" class="form-control form-control-lg datepicker" name="Video" value="@Model.Descrizione" />
                                        <label class="form-label">Video</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div data-mdb-input-init class="form-outline w-100">
                                        <input type="text" class="form-control form-control-lg datepicker" name="Durata" pattern="^([0-1][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$" class="form-control form-control-lg" required title="Il formato deve essere HH:MM:SS" value="@Model.Durata" />
                                        <label class="form-label">Durata</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">

                <div class="col-md-9 pe-5">

                  <div class="col-md-9 pe-5">
                    <label class="form-label " for="image">Immagine</label>
                   <input type="file" id="image" name="ImageFile" class="form-control form-control-lg" />
                  </div>

                </div>
              </div>
                            <div class="mt-4 pt-2">
                                <input id="submitBtn" data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Salva" />
                            </div>
                        </form> <!-- Chiusura del tag form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.querySelector('form');
    const sequenzaInput = form.querySelector('input[name="Lezione.Durata"]');

    sequenzaInput.addEventListener('input', function () {
      const pattern = /^([0-1][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$/;
      if (!pattern.test(sequenzaInput.value)) {
        sequenzaInput.setCustomValidity('Inserisci un orario valido nel formato HH:MM:SS.');
      } else {
        sequenzaInput.setCustomValidity('');
      }
    });

    form.addEventListener('submit', function (event) {
      if (!sequenzaInput.checkValidity()) {
        event.preventDefault();
        sequenzaInput.reportValidity();
      }
    });
  });
</script>
