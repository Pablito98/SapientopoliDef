@model AggiungiLezioneViewModel

<section class="gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <div class="d-flex align-items-center mb-3 pb-1">
              <img src="@(Url.Content("~/img/logo.jpg"))" class="nav-logo">
              <span class="h1 fw-bold mb-0">Aggiungi Corso</span>
            </div>
            <form asp-controller="Admin" asp-action="AggiungiLezione" method="post" enctype="multipart/form-data">

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div data-mdb-input-init class="form-outline">
                    <input type="text" name="Lezione.CorsoId" value="@Model.Corso.Id" readonly
                      class="form-control form-control-lg" />
                    <label class="form-label" for="firstName">Id Corso</label>
                  </div>

                </div>

                <div class="row">
                  <div class="col-md-6 mb-4">

                    <div data-mdb-input-init class="form-outline">
                      <input type="text" name="Lezione.Titolo" class="form-control form-control-lg" />
                      <label class="form-label" for="firstName">Titolo</label>
                    </div>

                  </div>

                </div>

                <div class="row">
                  <div class="col-md-6 mb-4 d-flex align-items-center">
                    <div data-mdb-input-init class="form-outline  w-100">
                      <input type="text" class="form-control form-control-lg datepicker" name="Lezione.Descrizione" />
                      <label class="form-label">Descrizione</label>
                    </div>
                  </div>


                </div>

                <div class="row">
                  <div class="col-md-6 mb-4">

                    <div data-mdb-input-init class="form-outline">
                      <input type="text" name="Lezione.Teoria" class="form-control form-control-lg" />
                      <label class="form-label" for="firstName">Teoria</label>
                    </div>

                  </div>

                  <div class="row">
                    <div class="col-md-6 mb-4">

                      <div data-mdb-input-init class="form-outline">
                        <input type="text" name="Lezione.Video" class="form-control form-control-lg" />
                        <label class="form-label" for="firstName">Video</label>
                      </div>

                    </div>
                    <div class="row">
                      <div class="col-md-6 mb-4">

                        <div data-mdb-input-init class="form-outline">
                          <input type="number" name="Lezione.Sequenza" min="1" class="form-control form-control-lg" />
                          <label class="form-label" for="Lezione.Sequenza">Sequenza</label>
                        </div>

                      </div>
                      <div class="row">

                        <div class="col-md-9 pe-5">

                          <div class="col-md-9 pe-5">
                            <label class="form-label " for="image">Immagine</label>
                            <input type="file" id="image" name="ImageFile" class="form-control form-control-lg" />
                          </div>

                        </div>
                      </div>

                      <div class="mt-4 pt-2">
                        <input id="submitBtn" data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit"
                          value="Salva" />
                      </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.querySelector('form');
    form.addEventListener('submit', function (event) {
      const sequenzaInput = form.querySelector('input[name="Lezione.Sequenza"]');
      if (sequenzaInput.value <= 0) {
        event.preventDefault();  // Blocca l'invio del form
        alert('La sequenza deve essere un numero maggiore di 0');
      }
    });
  });
</script>